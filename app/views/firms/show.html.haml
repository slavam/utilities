%h1 Характеристики организации
.content
  %table.card
    %tr
      %th Код:
      %td= @firm.code
    %tr
      %th Название:
      %td=h @firm.name.to_utf
    %tr
      %th Адрес:
      %td=h @firm.legal_address ? @firm.legal_address.to_utf : ''
    %tr
      %th Руководитель:
      %td= @firm.info_manager ? @firm.info_manager.to_utf : ''
