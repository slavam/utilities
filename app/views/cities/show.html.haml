%h1 Реквизиты населенного пункта

.content
  %table.card
    %tr
      %th
        Код:
      %td
        =h @city.id
    %tr
      %th
        Тип:
      %td
        =h @city.city_type.full_name.to_utf
    %tr
      %th
        Название:
      %td
        =h @city.name_rus.to_utf
    %tr
      %th
        Название 2:
      %td
        =h @city.name_ukr.to_utf
    %tr
      %th
        Подчиненность:
      %td
        =h @region_name
    %tr
      %th
        Код КОАТУУ:
      %td
        =h @city.code_koatuu
  
  .actions
    = link_to 'Улицы', :controller => 'street_locations', :action => 'index', :city_id => @city
